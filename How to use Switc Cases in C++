#include<iostream>
using namespace std;

int main()
{
    char button;
    cout<<"Enter the character : ";
    cin>>button;

    switch(button)
    {
        case 'a':
        cout<<"Hello"<<endl;
        break;

        case 'b':
        cout<<"Hola"<<endl;
        break;

        case 'c':
        cout<<"Namaste"<<endl;
        break;

        default :
        cout<<"I am still learning much more...!!!"<<endl;
        break;
    }
    return 0;
}
