#include<iostream>
using namespace std;

class student
{
    public:
    string name;
    int age;
    bool gender;

};

int main()
{
    int n;
    cout<<"Enter the number of student information are you want : ";
    cin>>n;
    
    student arr[n];
    for(int i=0;i<n;i++)
    {
        cout<<"Name = ";
        cin>>arr[i].name;
        cout<<"Age = ";
        cin>>arr[i].age;
        cout<<"Gender = ";
        cin>>arr[i].gender;   
    }

    cout<<"----------------------*******************************-----------------------------------"<<endl;
    cout<<"------------------------STUDENT INFORMATION SYSTEM--------------------------------------"<<endl;
    cout<<"----------------------*******************************-----------------------------------"<<endl;

    for(int i=0;i<n;i++)
    {
        cout<<"Name = "<<arr[i].name<<endl;
       cout<<"Age = "<<arr[i].age<<endl;
        cout<<"Gender = "<<arr[i].gender<<endl;
    }
}
